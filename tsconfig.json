{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": [
      "vite/client",
      "@types/jest",
      "@types/node",
      "./src/global.d.ts"
    ],
    // "declaration": false,
    // "declarationDir": "dist/types",
    "outDir": "dist",
    "disableSizeLimit": true,
    "paths": {
      "pandora-lib/*": ["./src/packages/*"],
      "dist/*": ["./dist/es/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
