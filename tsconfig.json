{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": [
      "vite/client",
      "@types/jest",
      "@types/node",
      "element-plus/global",
      "vitest"
    ],
    "baseUrl": ".",
    // "declaration": false,
    // "declarationDir": "dist/types",
    "outDir": "dist",
    "disableSizeLimit": true,
    "paths": {
      "pandora-lib/*": ["packages/*"],
      "dist/*": ["./dist/es/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "types/*.d.ts",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue",
    "global.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
